@model IEnumerable<FengZhen.Restaurant.Domain.Entities.Food>
@{
    ViewBag.Title = "Admin: All Foods";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>All Foods</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">Id</th>
                    <th class="text-left">Name</th>
                    <th class="text-right">Price</th>
                    <th class="text-center">Option</th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="text-right">@item.FoodId</td>
                        <td class="text-left">@Html.ActionLink(item.Name, "Edit", new { item.FoodId })</td>
                        <td class="text-right">@item.Price.ToString("c")</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("foodId", item.FoodId)
                                <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Add a new food", "Create", null,new { @class = "btn btn-default" })
        </div>
    </div>
